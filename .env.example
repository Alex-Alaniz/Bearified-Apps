# Bearified Apps Environment Variables
# Copy this file to .env.local and fill in your actual values

# Authentication Configuration
NEXT_PUBLIC_USE_PRIVY_AUTH=false
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
NEXT_PUBLIC_PRIVY_CLIENT_ID=your-privy-client-id
PRIVY_APP_SECRET=your-privy-app-secret

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# Optional: Third-party Integrations
CHIMPANION_API_URL=https://your-chimpanion-api.com
CHIMPANION_API_KEY=your-chimpanion-api-key
SOLEBREW_API_URL=https://your-solebrew-api.com
SOLEBREW_API_KEY=your-solebrew-api-key